<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <sapiha_guestalert translate="label" module="sapiha_guestalert">
            <label>Guest Alert Config</label>
            <sort_order>101</sort_order>
        </sapiha_guestalert>
    </tabs>
    <sections>
        <sapiha_guestalert translate="label" module="sapiha_guestalert">
            <label>Guest Alert configuration</label>
            <tab>sapiha_guestalert</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sapiha_guestalert_group>
                    <label>Guest Alert Template Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <email_price_template translate="label">
                            <label>Select Price Guest Alert Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_price_template>
                        <email_stock_template translate="label">
                            <label>Stock Guest Alert Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_stock_template>
                    </fields>
                </sapiha_guestalert_group>
            </groups>
        </sapiha_guestalert>
    </sections>
</config>