<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <sapiha_banner translate="label" module="sapiha_banner">
            <label>Banner Config</label>
            <sort_order>101</sort_order>
        </sapiha_banner>
    </tabs>
    <sections>
        <sapiha_banner translate="label" module="sapiha_banner">
            <label>Banner configurations</label>
            <tab>sapiha_banner</tab>
            <sort_order>1001</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sapiha_banner_group>
                    <label>Ratio option for baner images</label>
                    <frontend_type>select</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <grid_image_ratio translate="label">
                            <label>Set ratio for grid image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Sapiha_Banner_Model_Source_RatioGrid</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </grid_image_ratio>
                        <list_image_ratio translate="label">
                            <label>Set ratio for list image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Sapiha_Banner_Model_Source_RatioList</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </list_image_ratio>
                    </fields>
                </sapiha_banner_group>
            </groups>
        </sapiha_banner>
    </sections>
</config>
